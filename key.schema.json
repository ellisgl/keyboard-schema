{
    "$schema"     : "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/ellisgl/keyboard-schema/master/key.schema.json",
    "definitions" : {
        "key" : {
            "type"       : "object",
            "properties" : {
                "position"   : {
                    "type"       : "object",
                    "properties" : {
                        "x"        : {
                            "type"       : "number",
                            "multipleOf" : 0.0005
                        },
                        "y"        : {
                            "type"       : "number",
                            "multipleOf" : 0.0005
                        },
                        "rotation" : {
                            "type"       : "number",
                            "multipleOf" : 0.01
                        }
                    }
                },
                "cap"        : {
                    "type"       : "object",
                    "properties" : {
                        "legend"        : {
                            "type"       : "object",
                            "properties" : {
                                "top"    : {
                                    "type"       : "object",
                                    "properties" : {
                                        "string"     : {
                                            "type" : "string"
                                        },
                                        "fontName"   : {
                                            "type" : "string"
                                        },
                                        "fontColor"  : {
                                            "type" : [
                                                "string",
                                                "null"
                                            ]
                                        },
                                        "fontSize"   : {
                                            "type"       : "number",
                                            "multipleOf" : 0.01
                                        },
                                        "fontUnit"   : {
                                            "type" : "string",
                                            "enum" : [
                                                "px",
                                                "mm",
                                                "in",
                                                "point"
                                            ]
                                        },
                                        "alignement" : {
                                            "type" : "string",
                                            "enum" : [
                                                "left",
                                                "center",
                                                "right"
                                            ]
                                        }
                                    }
                                },
                                "middle" : {
                                    "type"       : "object",
                                    "properties" : {
                                        "string"     : {
                                            "type" : "string"
                                        },
                                        "fontName"   : {
                                            "type" : "string"
                                        },
                                        "fontColor"  : {
                                            "type" : [
                                                "string",
                                                "null"
                                            ]
                                        },
                                        "fontSize"   : {
                                            "type"       : "number",
                                            "multipleOf" : 0.01
                                        },
                                        "fontUnit"   : {
                                            "type" : "string",
                                            "enum" : [
                                                "px",
                                                "mm",
                                                "in",
                                                "point"
                                            ]
                                        },
                                        "alignement" : {
                                            "type" : "string",
                                            "enum" : [
                                                "left",
                                                "center",
                                                "right"
                                            ]
                                        }
                                    }
                                },
                                "bottom" : {
                                    "type"       : "object",
                                    "properties" : {
                                        "string"     : {
                                            "type" : "string"
                                        },
                                        "fontName"   : {
                                            "type" : "string"
                                        },
                                        "fontColor"  : {
                                            "type" : [
                                                "string",
                                                "null"
                                            ]
                                        },
                                        "fontSize"   : {
                                            "type"       : "number",
                                            "multipleOf" : 0.01
                                        },
                                        "fontUnit"   : {
                                            "type" : "string",
                                            "enum" : [
                                                "px",
                                                "mm",
                                                "in",
                                                "point"
                                            ]
                                        },
                                        "alignement" : {
                                            "type" : "string",
                                            "enum" : [
                                                "left",
                                                "center",
                                                "right"
                                            ]
                                        }
                                    }
                                },
                                "front"  : {
                                    "type"       : "object",
                                    "properties" : {
                                        "string"     : {
                                            "type" : "string"
                                        },
                                        "fontName"   : {
                                            "type" : "string"
                                        },
                                        "fontColor"  : {
                                            "type" : [
                                                "string",
                                                "null"
                                            ]
                                        },
                                        "fontSize"   : {
                                            "type"       : "number",
                                            "multipleOf" : 0.01
                                        },
                                        "fontUnit"   : {
                                            "type" : "string",
                                            "enum" : [
                                                "px",
                                                "mm",
                                                "in",
                                                "point"
                                            ]
                                        },
                                        "alignement" : {
                                            "type" : "string",
                                            "enum" : [
                                                "left",
                                                "center",
                                                "right"
                                            ]
                                        }
                                    }
                                }
                            }
                        },
                        "size"          : {
                            "type"       : "object",
                            "properties" : {
                                "height" : {
                                    "type"       : "number",
                                    "multipleOf" : 0.125
                                },
                                "width"  : {
                                    "type"       : "number",
                                    "multipleOf" : 0.125
                                }
                            }
                        },
                        "color"         : {
                            "type" : "string"
                        },
                        "profile"       : {
                            "type" : "string",
                            "enum" : [
                                "Cherry",
                                "DCS",
                                "DOM",
                                "DSA",
                                "DSS",
                                "G20",
                                "HSA",
                                "MG",
                                "MT3",
                                "OEM",
                                "SA",
                                "SS",
                                "Tai-Hao Cubic",
                                "TEX",
                                "XDA"
                            ]
                        },
                        "row"           : {
                            "description" : "Physical row style",
                            "type"        : "integer",
                            "minimum"     : 0,
                            "maximum"     : 5
                        },
                        "material"      : {
                            "type" : "string"
                        },
                        "mount"         : {
                            "type" : "string",
                            "enum" : [
                                "mx",
                                "alps"
                            ]
                        },
                        "hasNub"        : {
                            "type" : "boolean"
                        },
                        "isTransparent" : {
                            "type" : "boolean"
                        }
                    }
                },
                "electrical" : {
                    "type"       : "object",
                    "properties" : {
                        "switch" : {},
                        "row"    : {
                            "type"    : "integer",
                            "minimum" : 0
                        },
                        "column" : {
                            "type"    : "integer",
                            "minimum" : 0
                        }
                    }
                }
            }
        }
    }
}
