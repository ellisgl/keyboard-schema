{
    "$schema"     : "http://json-schema.org/draft-07/schema#",
    "$id"         : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/key.schema.json",
    "title": "Key Schema",
    "description": "Key cap and switch position, rotation and electrical info.",
    "type"        : "object",
    "definitions" : {
        "Key" : {
            "type"       : "object",
            "properties" : {
                "legends"       : {
                    "type"       : "object",
                    "properties" : {
                        "topLeft"      : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        },
                        "topCenter"    : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        },
                        "topRight"     : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        },
                        "middleLeft"   : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        },
                        "middleCenter" : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        },
                        "middleRight"  : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        },
                        "bottomLeft"   : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        },
                        "bottomCenter" : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        },
                        "bottomRight"  : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        },
                        "frontLeft"    : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        },
                        "frontCenter"  : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        },
                        "frontRight"   : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/legend.schema.json#/definitions/Legend"
                        }
                    }
                },
                "x"             : {
                    "type"       : "number",
                    "multipleOf" : 0.0005
                },
                "y"             : {
                    "type"       : "number",
                    "multipleOf" : 0.0005
                },
                "x2"            : {
                    "type"       : "number",
                    "multipleOf" : 0.0005
                },
                "y2"            : {
                    "type"       : "number",
                    "multipleOf" : 0.0005
                },
                "height"        : {
                    "type"       : "number",
                    "multipleOf" : 0.125
                },
                "width"         : {
                    "type"       : "number",
                    "multipleOf" : 0.125
                },
                "height2"       : {
                    "type"       : "number",
                    "multipleOf" : 0.125
                },
                "width2"        : {
                    "type"       : "number",
                    "multipleOf" : 0.125
                },
                "rotation"      : {
                    "type"       : [
                        "object",
                        "null"
                    ],
                    "properties" : {
                        "x"     : {
                            "type"       : "number",
                            "multipleOf" : 0.01
                        },
                        "y"     : {
                            "type"       : "number",
                            "multipleOf" : 0.01
                        },
                        "angle" : {
                            "type"       : "number",
                            "multipleOf" : 0.01
                        }
                    }
                },
                "color"         : {
                    "type" : "string"
                },
                "profile"       : {
                    "type" : "string",
                    "enum" : [
                        "Cherry",
                        "DCS",
                        "DOM",
                        "DSA",
                        "DSS",
                        "G20",
                        "HSA",
                        "MG",
                        "MT3",
                        "OEM",
                        "SA",
                        "SS",
                        "Tai-Hao Cubic",
                        "TEX",
                        "XDA"
                    ]
                },
                "rowProfile"    : {
                    "description" : "Physical row style",
                    "type"        : "string",
                    "enum"        : [
                        "R1",
                        "R2",
                        "R3",
                        "R4",
                        "R5",
                        "SPACE"
                    ]
                },
                "material"      : {
                    "type" : "string"
                },
                "mount"         : {
                    "type" : "string",
                    "enum" : [
                        "mx",
                        "alps"
                    ]
                },
                "hasNub"        : {
                    "type" : "boolean"
                },
                "isStepped": {
                    "type" : "boolean"
                },
                "isTransparent" : {
                    "type" : "boolean"
                },
                "isGhost": {
                    "type" : "boolean"
                },
                "isDecal": {
                    "type" : "boolean"
                },
                "electrical"    : {
                    "type"       : "object",
                    "properties" : {
                        "switch" : {
                            "$ref" : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/switch.schema.json#/definitions/Switch"
                        },
                        "row"    : {
                            "type"    : "integer",
                            "minimum" : 0
                        },
                        "column" : {
                            "type"    : "integer",
                            "minimum" : 0
                        }
                    }
                }
            }
        }
    }
}
