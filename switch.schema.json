{
    "$schema"     : "http://json-schema.org/draft-07/schema#",
    "$id"         : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/release/switch.schema.json",
    "type"        : "object",
    "title"       : "Switch info",
    "definitions" : {
        "Switch" : {
            "type"       : "object",
            "properties" : {
                "style": {
                    "type" : "string",
                    "enum" : ["alps", "mx"]
                },
                "pins": {
                    "type": "integer",
                    "enum" : [2, 3, 5]
                },
                "hasRGB": {
                    "description" : "Does this switch have holes for an RBG LED?",
                    "type" : "boolean"
                }
            }
        }
    }
}
