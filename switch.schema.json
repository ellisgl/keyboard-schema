{
    "$schema"     : "http://json-schema.org/draft-07/schema#",
    "$id"         : "https://raw.githubusercontent.com/ellisgl/keyboard-schema/master/switch.schema.json",
    "type"        : "object",
    "definitions" : {
        "switch" : {
            "type"       : "object",
            "properties" : {
                "manufacturer" : {
                    "type" : "string"
                },
                "model"        : {
                    "type" : "string"
                },
                "description"  : {
                    "type" : "string"
                },
                "hasLed"       : {
                    "type" : "boolean"
                },
                "ledColor"     : {
                    "type" : [
                        "string",
                        "null"
                    ]
                }
            }
        }
    }
}
